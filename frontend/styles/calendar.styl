.react-calendar
  position: relative
  left: -8px
  width: 350px

  button
    margin: 0
    border: 0

    &:enabled
      &:hover
        cursor: pointer

  &__navigation
    height: 30px
    button
      min-width: 44px
      background: none
      color: white
      margin: 0 1px

      &:enabled
        &:hover, &:focus
          $bgcolor = #5c5666
          background-color: $bgcolor
          outline: 0

  &__month-view
    &__weekdays
      margin: .9em
      text-align: center
      text-transform: uppercase
      font-size: .75em

      &__weekday
        padding: .75em

    &__weekNumbers
      .react-calendar__tile
        display: flex
        align-items: center
        justify-content: center
        font-size: .75em
        padding: calc(.5em / .75) calc(.5em / .75)

    &__days
      &__day
        color: white
        &--neighboringMonth
          $bgcolor = #9c99a3
          color: $bgcolor

  &__year-view,
  &__decade-view,
  &__century-view
    .react-calendar__tile
      padding: .5em
      color: white

  &__tile
    width: 50px
    height: 50px
    text-align: center
    padding: .75em
    background: none
    border-radius: 50%

    $bgcolor = #625c6c

    button&:enabled
      &:hover, &:focus
        background-color: $bgcolor
        outline: 0

    &--hasActive
      background: $bgcolor

      button&:enabled
        &:hover, &:focus
          background: lighten($bgcolor, 10%)
          outline: 0

    &--active
      $bgcolor = #615a6a
      background: $bgcolor
      color: white

      button&:enabled
        &:hover
          background: lighten($bgcolor, 15%)
